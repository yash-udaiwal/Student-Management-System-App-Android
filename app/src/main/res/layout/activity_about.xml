<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        app:cardElevation="3dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#846263"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#465BE8"
                android:fontFamily="@font/almendra_sc"
                android:text="AMRITSAR COLLEGE \n OF \n ENGINEERING \n AND \n TECHNOLOGY"
                android:textAlignment="center"
                android:textColor="#D6D6D6"
                android:textSize="30sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:background="@color/colorAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="#CF2424"
                android:text="Version"
                android:textAlignment="center"

                android:textColor="#BDB5B5"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#506DEF"
                android:fontFamily="sans-serif-light"
                android:text="1.0"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#CF2424"
                android:text="Last Update"
                android:textAlignment="center"
                android:textColor="#BDB5B5"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#506DEF"
                android:fontFamily="sans-serif-light"
                android:text="May 2021"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#CF2424"
                android:text="Developed By"
                android:textAlignment="center"
                android:textColor="#BDB5B5"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#506DEF"
                android:fontFamily="sans-serif-light"
                android:text="Yash Udaiwal \n \n Guleen Kaur \n \nSimran Kaur \n\n Upinder Singh"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginTop="20dp"
                android:background="#E6DEDE"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/lgoo"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/acetlogo" />

                <TextView
                    android:id="@+id/txtChannel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/lgoo"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_toRightOf="@id/lgoo"
                    android:onClick="txtSub"
                    android:text="https://acetamritsar.ac.in/"
                    android:textColor="#6200EA"
                    android:textSize="20dp"
                    android:textStyle="italic" />


            </RelativeLayout>


        </LinearLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>